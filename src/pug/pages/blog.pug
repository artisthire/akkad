                    {img: "1", title: "Magna 9", groups: "comments"},
                    {img: "2", title: "Magna 10", groups: "comments"},
                  ];

                each item in itemsData
                  li.post-filter__posts-item.js-post-filter-item(data-groups=`${item.groups}`)
                    a.post-filter__post(href="#")
                      .ibg.post-filter__img
                        +webpImg(`blog/posts/post-img-${item.img}.jpg`, alt=`Post image`, width='80', height='80')
                      p.post-filter__post-title= `${item.title}`
                        time.post-filter__date(datetime="2012-10-03") 3th oct 2012

            .post-category
              h3.blog-filter__title categories

