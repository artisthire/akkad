                input#post-search.post-search__input(
                  type="search",
                  name="search-query",
                  placeholder="Search...",
                  required
                )
                label.visually-hidden(for="post-search") Search...
                button.post-search__submit(type="submit")
                  ion-icon(name="search", aria-label="submit")

            .post-filter
              h3.blog-filter__title posts

              ul#post-filter-ctrl-container.post-filter__list
                - var items = ["lastes", "popular", "comments"];
                each item in items
                  li.post-filter__list-item
                    a.post-filter__link.js-post-filter-ctrl(
                      class={active: item === "lastes"},
                      href="#",
                      data-group=`${item}`
                    )= `${item}`

              ol#post-filter.post-filter__posts
                -
                  var itemsData = [
                    {img: "1", title: "Magna mollis ultricies", groups: "lastes"},
                    {img: "2", title: "Magna mollis ultricies", groups: "lastes"},
                    {img: "3", title: "Magna mollis ultricies", groups: "lastes"},
                    {img: "2", title: "Magna 1", groups: "popular"},
                    {img: "3", title: "Magna manga", groups: "popular"},
                    {img: "3", title: "Post 7", groups: "comments"},
